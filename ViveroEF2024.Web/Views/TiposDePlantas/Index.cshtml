@model IEnumerable<TipoDePlanta>
@{
    ViewData["Title"] = "Listado de Tipos de Plantas";
}
@if (TempData["success"] != null)
{
    var msg = TempData["success"]?.ToString();
    <div class="alert alert-info alert-dismissible fade show w-75" role="alert">
        <strong>Éxito!</strong> @msg.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row w-75 mb-4">
    <div class="col-6">
        <h3>Tipos de Plantas</h3>

    </div>
    <div class="col-6 text-end">
        <a asp-controller="TiposDePlantas" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Nuevo
        </a>
    </div>
</div>
<table class="table table-bordered table-hover w-75">
    <thead>
        <tr>
            <th>Tipo de Planta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td>
                        <a asp-controller="" asp-action="" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                            Borrar
                        </a>
                        <a asp-controller="" asp-action="" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i>
                            Editar
                        </a>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No hay tipos de plantas</td>
            </tr>

        }
    </tbody>
</table>
