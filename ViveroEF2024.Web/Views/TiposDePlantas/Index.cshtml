@model IPagedList<TipoDePlanta>
@using X.PagedList
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Listado de Tipos de Plantas";
}
<div class="row w-75 mb-4">
    <div class="col-6">
        <h3>Tipos de Plantas</h3>

    </div>
    <div class="col-6 text-end">
        <a asp-controller="TiposDePlantas" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Nuevo
        </a>
    </div>
</div>
<table class="table table-bordered table-hover w-75">
    <thead>
        <tr>
            <th>Tipo de Planta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr id="@item.TipoDePlantaId">
                    <td>@item.Descripcion</td>
                    <td>
                        <a onclick="Delete('/TiposDePlantas/Delete/@item.TipoDePlantaId',@item.TipoDePlantaId)" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                            Borrar
                        </a>
                        <a asp-controller="TiposDePlantas" asp-action="Edit" asp-route-id="@item.TipoDePlantaId" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i>
                            Editar
                        </a>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No hay tipos de plantas</td>
            </tr>

        }
    </tbody>
</table>
<div class="d-flex">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    UlElementClasses = new[] { "pagination" },
    LiElementClasses = new[] { "page-item" },
    PageClasses = new[] { "page-link" },
    DisplayLinkToIndividualPages = true,
    DisplayPageCountAndCurrentLocation = false,
    MaximumPageNumbersToDisplay = 10
})
</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script type="text/javascript">
        function Delete(url, id) {
            // console.log(url);
            // debugger;
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                var row = document.getElementById(id);
                                row.remove();
                            } else {
                                toastr.error(data.message);
                            }
                        }
                    })
                }
            });
        }

    </script>
}
