@model TipoDePlantaEditVm
@{
    ViewData["Title"] = "Editar Tipo";
}
<form method="post" asp-controller="TiposDePlantas" asp-action="Edit">
    <input type="hidden" asp-for="TipoDePlantaId" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar Tipo de Planta</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-pencil"></i>
            Guardar
        </button>
        <a asp-controller="TiposDePlantas" asp-action="Index" class="btn btn-info">
            <i class="bi bi-backspace"></i>
            Volver
        </a>


    </div>
</form>